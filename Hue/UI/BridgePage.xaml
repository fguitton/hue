<Page
    x:Class="Hue.UI.BridgePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hue.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#1c2127">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                    Background="#373d45">

            <Line Stroke="#448ccb" Height="2"/>
            
            <TextBlock Text="Searching for bridges"
                   Foreground="White" FontSize="24"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="25"/>

            <ProgressRing HorizontalAlignment="Center" VerticalAlignment="Center"
                          Margin="0, 0, 0, 25"
                          IsActive="True" Background="Transparent"/>
            
            <Line Stroke="#448ccb" Height="2"/>
        </StackPanel>
    </Grid>

</Page>
