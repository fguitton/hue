<UserControl
    x:Class="Hue.UI.Parts.ToggleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hue.UI.Parts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="OnButton" Text="ON" 
                   VerticalAlignment="Center"
                   Margin="0, 0, 10, 0" FontSize="24"
                   Foreground="#585b60"
                   Tapped="OnButton_Tapped"/>

        <TextBlock Text="/" Foreground="#585b60"
                   VerticalAlignment="Center" FontSize="24"
                   Margin="0, 0, 10, 0"/>

        <TextBlock x:Name="OffButton" Text="OFF" 
                   VerticalAlignment="Center" FontSize="24"
                   Foreground="#0e95ec"
                   Tapped="OffButton_Tapped"/>

    </StackPanel>
</UserControl>
